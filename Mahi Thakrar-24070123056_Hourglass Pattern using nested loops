#include <iostream>
using namespace std;

int main() {
    int i,j,k;
    int n=5;
    for (i=n;i>=1;i--)
    {
        for(j=1;j<=n-i; j++){
        cout<<" ";
        }
        
        for(int k=1;k<=i;k++){
            cout<<"* ";
        }
        cout<<endl;
    }
    
    for(i = 2; i <= n; i++){
       
        for(j = 1; j<= n - i; j++){
            cout << " ";
        }
        
        for(k = 1; k<= i; k++){
            cout << "* ";
        }
        cout << endl;
    }
    

    return 0;
}

//Output:
//* * * * * 
// * * * * 
//  * * * 
//   * * 
//    * 
//   * * 
//  * * * 
// * * * * 
//* * * * * 
